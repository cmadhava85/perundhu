# API Configuration
VITE_API_URL=http://localhost:8080
VITE_API_KEY=your-api-key-here

# Application Version
VITE_APP_VERSION=1.0.0

# Security Configuration
VITE_SECURITY_ENABLED=true
VITE_RATE_LIMIT_ENABLED=true
VITE_ENCRYPTION_ENABLED=true

# Authentication Configuration
VITE_AUTH_PROVIDER=oauth2
VITE_JWT_ISSUER=https://your-auth-provider.com
VITE_JWT_AUDIENCE=perundhu-api

# Google OAuth2 Configuration (if using Google)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Auth0 Configuration (if using Auth0)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=your-auth0-api-identifier

# Feature Flags
VITE_FEATURE_TRACKING=true
VITE_FEATURE_REWARDS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CONTRIBUTIONS=true

# Map Feature
VITE_ENABLE_MAP=false

# Contribution Method Feature Flags
# Voice Contribution (BETA) - Uses Web Speech API for free transcription
# Status: Disabled by default - Set to 'true' to enable
VITE_ENABLE_VOICE_CONTRIBUTION=false

# Image OCR Contribution (STABLE)
# Status: Enabled by default - Set to 'false' to disable
VITE_ENABLE_IMAGE_CONTRIBUTION=true

# Manual Form Entry Contribution (STABLE)
# Status: Enabled by default - Set to 'false' to disable
VITE_ENABLE_MANUAL_CONTRIBUTION=true

# Paste Text Contribution (BETA) - Copy-paste from WhatsApp/Facebook/Twitter
# Status: Enabled by default - Uses NLP to extract route data from pasted text
# Security: Includes rate limiting, spam detection, and admin verification
VITE_ENABLE_PASTE_CONTRIBUTION=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# ============================================
# GUEST USER SECURITY PROTECTION
# ============================================
# Honeypot Protection (bot detection)
VITE_HONEYPOT_ENABLED=true

# Google reCAPTCHA v3 (invisible bot protection)
# Get keys from: https://www.google.com/recaptcha/admin
VITE_RECAPTCHA_ENABLED=false
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# API Key (for additional protection)
VITE_API_KEY_ENABLED=false
VITE_PUBLIC_API_KEY=your-public-api-key