# API Configuration
VITE_API_URL=http://localhost:8080
VITE_API_KEY=your-api-key-here

# Application Version
VITE_APP_VERSION=1.0.0

# Security Configuration
VITE_SECURITY_ENABLED=true
VITE_RATE_LIMIT_ENABLED=true
VITE_ENCRYPTION_ENABLED=true

# Authentication Configuration
VITE_AUTH_PROVIDER=oauth2
VITE_JWT_ISSUER=https://your-auth-provider.com
VITE_JWT_AUDIENCE=perundhu-api

# Google OAuth2 Configuration (if using Google)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Auth0 Configuration (if using Auth0)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=your-auth0-api-identifier

# Feature Flags
VITE_FEATURE_TRACKING=true
VITE_FEATURE_REWARDS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CONTRIBUTIONS=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false