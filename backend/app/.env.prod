# Production Environment Configuration
DB_URL=jdbc:mysql://production-db-host:3306/perundhu?useSSL=true&requireSSL=true
DB_USERNAME=prod_db_username
DB_PASSWORD=prod_db_password

# SQL and Hibernate Configuration
SQL_INIT_MODE=never
HIBERNATE_DDL_AUTO=none
SHOW_SQL=false

# Connection Pool Configuration
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_TIMEOUT=30000

# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://perundhu.com,https://www.perundhu.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_MAX_AGE=3600