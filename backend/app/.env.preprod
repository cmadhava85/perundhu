# PreProd Environment Configuration
GCP_INSTANCE_CONNECTION_NAME=your-project:region:instance-name
MYSQL_USERNAME=db_username
MYSQL_PASSWORD=db_password

# SQL and Hibernate Configuration
SQL_INIT_MODE=always
HIBERNATE_DDL_AUTO=update
SHOW_SQL=false

# Connection Pool Configuration
HIKARI_MAX_POOL_SIZE=5
HIKARI_MIN_IDLE=2

# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://preprod.perundhu.com,https://preprod.perundhu.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Security Configuration
REQUIRE_SSL=true
JWT_SECRET=YOUR_PREPROD_JWT_SECRET
DATA_ENCRYPTION_KEY=YOUR_PREPROD_ENCRYPTION_KEY

# OAuth2 Configuration
JWT_JWK_SET_URI=https://your-auth-provider.com/.well-known/jwks.json
JWT_ISSUER_URI=https://your-auth-provider.com
JWT_AUDIENCES=perundhu-api

# Trusted Contributors (comma-separated)
TRUSTED_CONTRIBUTORS=admin,system