# Production Environment Configuration
# DO NOT commit actual production values - use GCP Secret Manager

# Database Configuration (Cloud SQL)
DB_URL=jdbc:mysql://PRODUCTION_DB_HOST:3306/perundhu?useSSL=true&requireSSL=true
DB_USERNAME=perundhu_user
DB_PASSWORD=YOUR_PRODUCTION_DB_PASSWORD

# Connection Pool Configuration
HIKARI_MAX_POOL_SIZE=20
HIKARI_MIN_IDLE=10
HIKARI_TIMEOUT=30000

# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO
SHOW_SQL=false

# CORS Configuration - Update with actual production URLs
CORS_ALLOWED_ORIGINS=https://perundhu.app,https://www.perundhu.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Security Configuration
REQUIRE_SSL=true
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET
DATA_ENCRYPTION_KEY=YOUR_PRODUCTION_ENCRYPTION_KEY

# OAuth2 Configuration
JWT_JWK_SET_URI=https://your-auth-provider.com/.well-known/jwks.json
JWT_ISSUER_URI=https://your-auth-provider.com
JWT_AUDIENCES=perundhu-api

# Trusted Contributors (comma-separated)
TRUSTED_CONTRIBUTORS=admin,system
